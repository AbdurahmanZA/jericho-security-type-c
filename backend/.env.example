# JERICHO Security Type C - Environment Configuration
# Copy this file to .env and update with your actual values

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
PORT=5000
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jericho_security
DB_USER=jericho
DB_PASSWORD=jericho_secure_2024
DB_SSL=false

# ===== REDIS CONFIGURATION =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== JWT AUTHENTICATION =====
# CRITICAL: Change these secrets in production!
JWT_SECRET=jericho_jwt_secret_change_in_production_with_long_random_string
JWT_REFRESH_SECRET=jericho_refresh_secret_change_in_production_with_different_long_random_string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===== HIKVISION API CREDENTIALS =====
# CRITICAL: Add your actual AK/SK from Hikvision
HIKVISION_ACCESS_KEY=your_hikvision_access_key_here
HIKVISION_SECRET_KEY=your_hikvision_secret_key_here
HIKVISION_API_URL=https://openapi.hikvision.com
HIKVISION_TIMEOUT=30000

# ===== STREAMING CONFIGURATION =====
HLS_PATH=/app/hls
SNAPSHOTS_PATH=/app/snapshots
MAX_STREAMS=12
STREAM_QUALITY=medium

# ===== SECURITY CONFIGURATION =====
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
LOG_DIR=/app/logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# ===== MOTION DETECTION =====
MOTION_SENSITIVITY=medium
MOTION_AREA_THRESHOLD=0.05
MOTION_COOLDOWN=5000

# ===== EMAIL NOTIFICATIONS (Optional) =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@jericho-security.com

# ===== WEBHOOKS (Optional) =====
WEBHOOK_URL=
WEBHOOK_SECRET=

# ===== FFMPEG CONFIGURATION =====
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
HLS_SEGMENT_DURATION=6
HLS_LIST_SIZE=10

# ===== PERFORMANCE TUNING =====
WORKER_PROCESSES=auto
MAX_MEMORY_USAGE=2048
CACHE_TTL=300
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10